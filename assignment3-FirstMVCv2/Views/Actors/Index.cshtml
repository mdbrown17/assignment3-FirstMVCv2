@model IEnumerable<assignment3_FirstMVCv2.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create">Add an Actor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.ImdbHyperLink)">
                    <img class="imdbLogo" src="/images/IMDBlogo.png">
                </a>
            </td>
            <td>
                @if (item.Photo != null)
                {
                    <img width="100" height="100" src="@Url.Action("GetPhoto", "Actors", new {item.Id})" />
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">View Tweets</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
