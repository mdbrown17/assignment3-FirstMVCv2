@model IEnumerable<assignment3_FirstMVCv2.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>All Movies</h1>

<p>
    <a asp-action="Create">Add a Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Release Year
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.ImdbHyperlink)">
                        <img class="imdbLogo" src="/images/IMDBlogo.png">
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealeaseYear)
                </td>
                <td>

                    @if (item.Poster != null)
                    {
                        <img width="100" height="100" src="@Url.Action("GetPoster", "Movies", new {item.Id})" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">View Tweets</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
